{
  "platform": {
    "name": "AI Product Discovery Hub",
    "version": "1.0.0",
    "description": "Modular AI Product Discovery Platform",
    "architecture": "microservices",
    "plugins": {
      "directory": "./plugins",
      "autoload": true,
      "hot_reload": true
    },
    "apis": {
      "base_url": "/api/v1",
      "rate_limiting": {
        "enabled": true,
        "requests_per_minute": 1000
      },
      "authentication": {
        "type": "bearer_token",
        "required": true
      }
    },
    "ai": {
      "models": {
        "product_matching": "gpt-4o",
        "price_prediction": "gpt-4o",
        "recommendation": "gpt-4o"
      },
      "providers": [
        "openai",
        "anthropic",
        "huggingface"
      ],
      "fallback_strategy": "round_robin"
    },
    "data_sources": {
      "refresh_interval": "1h",
      "cache_ttl": "30m",
      "max_concurrent_requests": 10
    }
  }
}